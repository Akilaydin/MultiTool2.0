            <TabItem Header="SqlGenerator">
                <Canvas>
                    <xctk:IntegerUpDown Name="timesToGenerateUpDown" AllowTextInput="False" Minimum="1" Maximum="20" FontSize="16" Value="5" Canvas.Left="1055" Canvas.Top="80" Width="85" />
