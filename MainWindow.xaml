                                    <DataGridTextColumn Header="Потребности"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Button Width="130" Height="40" x:Name="MinElemBegin" Content="Begin" Canvas.Left="194" Canvas.Top="257"/>
